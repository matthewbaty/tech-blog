<div class="col-12">
    <h1 class="text-center">Blog Dashboard</h1>
</div>
<br>
<h2 class="md-4 ms-3">My Blog Posts</h2>
<div class="row">
    {{#each posts}}
    <div class="col-md-4 mb-3">
        <div class="card" id="blog-dashboard-cards">
            <div class="card-body">
                <div class="post-container">
                    <h2><a href="/post/{{id}}" class="text-title">{{title}}</a></h2>
                    <p>Created by: {{user.username}} Date: {{format_date createdAt}}</p>
                    <a href="/updatepost/{{id}}" class="btn btn-dark">Update Post</a>
                    <button class="btn btn-dark delete-post-btn" data-post-id="{{id}}">Delete</button>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
<br>
<div class="text-center">
    <button class="btn btn-success" id="new-post-btn"><a href="/newpost" style="text-decoration:none"
            class="text-white">New Post</a></button>
</div>

<script src="/js/delete.js"></script> 