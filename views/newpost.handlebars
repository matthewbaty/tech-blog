<div class="card" style="width: 60rem;" id="new-post-card">
    <h3 class="card-header">New Blog Post</h3>
    <form class="card-body new-post-form" id="new-post-form">
        <label for="post-title" class="form-label">Title:</label>
        <input type="text" class="form-control" id="post-title" name="post-title" class="form-input" />

        <label class="form-label" for="content">Content:</label>
        <textarea id="post-content" class="form-control" name="content" class="form-input" rows="5"></textarea>
        <br>
        <button type="submit" class="btn btn-success">Create</button>
    </form>
</div>

